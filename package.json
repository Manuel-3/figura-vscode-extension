{
  "name": "figura",
  "displayName": "Figura",
  "description": "Figura Script Helper",
  "version": "1.8.0",
  "engines": {
    "vscode": "^1.58.0"
  },
  "files": [
    "images/avatar-json.png"
  ],
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "figura.openLibrariesFolder",
        "title": "Open libraries folder"
      },
      {
        "command": "figura.changeLibrariesFolder",
        "title": "Change libraries folder"
      },
      {
        "command": "figura.changeTargetRequireFolder",
        "title": "Change libraries target require folder"
      },
      {
        "command": "figura.askInstallLua",
        "title": "Ask to install Lua language server"
      },
      {
        "command": "figura.askInstallBlockbench",
        "title": "Ask to install Blockbench"
      },
      {
        "command": "figura.askInstallDocumentation",
        "title": "Ask to install Figura documentation"
      },
      {
        "command": "figura.changeAllSnippetsEnabled",
        "title": "Change enabled state of all snippets"
      },
      {
        "command": "figura.changeAllDefaultLibrariesEnabled",
        "title": "Change enabled state of all default libraries"
      },
      {
        "command": "figura.changeSnippetEnabled",
        "title": "Change enabled state of a snippet"
      },
      {
        "command": "figura.changeDefaultLibraryEnabled",
        "title": "Change enabled state of a default library"
      },
      {
        "command": "figura.openWiki",
        "title": "Open the Figura wiki"
      },
      {
        "command": "figura.openDiscord",
        "title": "Open the Figura Discord server"
      },
      {
        "command": "figura.openFiguraSource",
        "title": "Open the Figura Github repository"
      }
    ],
    "configuration": {
      "title": "Figura",
      "properties": {
        "figura.librariesFolderPath": {
          "type": "string",
          "default": "",
          "description": "Path to the libraries folder. Put any lua libraries in there. They can be used by typing \"import\" (for pasting as text) or \"require\" (for requiring the file).",
          "order": 1
        },
        "figura.requirePath": {
          "type": "string",
          "default": "/",
          "description": "Where to put the library file when imported using \"require\". Relative to the workspace root or open folder.",
          "order": 5
        },
        "figura.snippetEnabledStates": {
          "type": "object",
          "default": null
        },
        "figura.defaultLibrariesEnabledStates": {
          "type": "object",
          "default": null
        },
        "figura.figuraDocumentationRepository": {
          "type": "string",
          "default": "https://github.com/GrandpaScout/FiguraRewriteVSDocs/",
          "description": "Repository for figura vscode documentation."
        }
      }
    },
    "views": {
      "figuraSettingsSidebar": [
        {
          "id": "figuraSettingsView",
          "name": "Settings"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "figuraSettingsSidebar",
          "title": "Figura",
          "icon": "images/button.png"
        }
      ]
    }
  },
  "scripts": {
    "webpack": "npx webpack --config webpack.config.js",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^10.0.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.95.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4"
  },
  "publisher": "Manuel-Underscore",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Manuel-3/figura-vscode-extension.git"
  },
  "dependencies": {
    "dompurify": "^3.1.7",
    "firebase": "^10.14.1",
    "highlight.js": "^11.10.0",
    "marked": "^14.1.3",
    "marked-highlight": "^2.2.0"
  }
}
